<!--pages/home/search/search.wxml-->
<view class='container'>
  <view class='search'>
    <view class='searchbar'>
    <image src='/pages/images/search.png' class='search-img'></image> 
    <input bindinput='searchRest' type='text' class='search-input' placeholder-class='phClass' placeholder='搜索餐厅' focus='true' confirm-type='search' value='{{ inputValue }}'></input>
    <image src='/pages/images/clear.png' class='clear' bindtap='clear'></image>
    </view>
     <!-- <text class='search-text'>取消</text> -->
  </view>
  <view wx:for="{{chainShops}}" wx:for-item="chainShop" wx:key="key" wx:for-index="i">
    <view class='searchList' wx:for="{{chainShop.restaurants}}" wx:for-item="restaurant" wx:key="key" wx:for-index="j">
      <view class='searchList-li' data-csid='{{i}}' data-restid='{{j}}' bindtap='showRestInfo'>{{restaurant.name}}</view>
    </view>
  </view>
</view>